bundle agent ssh_max_auth_tries
#@ var default:ssh_max_auth_tries.sshd_config[MaxAuthTries] The maximum number of authentication tries desired (default 4)
{

  vars:
      # If this is not set via Augments ahead of time we set it to 4
      "sshd_config[MaxAuthTries]"
        string => "4",
        unless => or( strcmp( "cmdb", getvariablemetatags( "$(this.promiser)", "source" ) ),
                      strcmp( "augments_file", getvariablemetatags( "$(this.promiser)", "source" )));

  methods:
      "SSHD Config"
        usebundle => lib_sshd_config:global_key_values( "$(this.namespace):$(this.bundle).sshd_config" );
}
